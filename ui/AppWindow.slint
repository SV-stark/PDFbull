import {
    Button,
    VerticalBox,
    HorizontalBox,
    ScrollView,
    ListView,
    ProgressIndicator,
} from "std-widgets.slint";
import { Theme } from "theme.slint";
import {
    ModernButton,
    IconButton,
    Divider,
    ThemeToggle,
    FolderIcon,
    ChevronLeftIcon,
    ChevronRightIcon,
    PlusIcon,
    MinusIcon,
    MenuIcon,
} from "widgets.slint";

struct OutlineItem {
    title: string,
    page_index: int,
    level: int,
}

export component AppWindow inherits Window {
    title: "PDFbull";
    width: 1200px;
    height: 800px;
    background: Theme.background;
    preferred-width: 1000px;
    preferred-height: 700px;

    in-out property <int> current_page: 0;
    in-out property <int> total_pages: 0; // If 0, no document loaded
    in-out property <float> zoom: 1.0;
    in-out property <string> status_text: "Ready - Open a PDF to begin";
    in-out property <bool> sidebar_visible: true;
    in-out property <bool> is_loading: false;
    in-out property <[image]> pdf_pages; // Model for list view
    in-out property <[float]> pdf_page_heights; // Height cache for layout
    in-out property <float> pdf_page_width; // Assumes uniform width for now, or use max
    in-out property <float> total_height;
    in-out property <[OutlineItem]> outline;
    in-out property <[image]> pdf_thumbnails;

    // Callbacks onto Rust
    callback open_document();
    callback close_document();
    callback request_render(int, float);
    callback jump_to_page(int);
    callback notify_render_complete(int);
    callback notify_open_complete(int, [float], float, [OutlineItem]); // count, heights, max_w, outline // New: Signal UI that a page is ready in the cache

    // Trigger render when page or zoom changes
    // Debouncing would be ideal but for now we just react
    changed current_page => {
        if (total_pages > 0) {
            request_render(current_page, zoom);
        }
    }

    // Main Focus Scope for Keyboard Events
    FocusScope {
        width: parent.width;
        height: parent.height;
        key-pressed(event) => {
            if (event.text == " ") {
                 // Space -> Next Page
                 if (current-page < total-pages - 1) {
                    current-page += 1;
                    return accept;
                }
            }
            if (event.text == Key.RightArrow || event.text == Key.DownArrow) {
                if (current-page < total-pages - 1) {
                    current-page += 1;
                    return accept;
                }
            }
            if (event.text == Key.LeftArrow || event.text == Key.UpArrow) {
                if (current-page > 0) {
                    current-page -= 1;
                    return accept;
                }
            }
            if (event.modifiers.control) {
                if (event.text == "=" || event.text == "+") {
                    zoom = min(5.0, zoom * 1.25);
                    request_render(current_page, zoom);
                    return accept;
                }
                if (event.text == "-") {
                    zoom = max(0.25, zoom / 1.25);
                    request_render(current_page, zoom);
                    return accept;
                }
                if (event.text == "0") {
                    zoom = 1.0;
                    request_render(current_page, zoom);
                    return accept;
                }
            }
            reject
        }

        VerticalLayout {
            padding: 0px;

            // Top Toolbar
            Rectangle {
                height: 48px;
                background: Theme.surface;
                HorizontalLayout {
                    padding-left: Theme.padding-md;
                    padding-right: Theme.padding-md;
                    spacing: Theme.padding-md;
                    alignment: center;

                    // Left side controls
                    HorizontalLayout {
                        alignment: start;
                        spacing: Theme.padding-md;
                        IconButton {
                            enabled: !is_loading;
                            clicked => {
                                sidebar_visible = !sidebar_visible;
                            }
                            MenuIcon {
                                icon-color: Theme.text-primary;
                            }
                        }

                        ModernButton {
                            text: "Open PDF";
                            primary: true;
                            enabled: !is_loading;
                            clicked => {
                                open_document();
                            }
                            FolderIcon {
                                icon-color: Theme.on-accent;
                            }
                        }

                        ModernButton {
                            text: "Close";
                            enabled: total_pages > 0 && !is_loading;
                            clicked => {
                                close_document();
                            }
                        }
                    }
                    
                    // Spacer
                    Rectangle {
                        horizontal-stretch: 1;
                    }

                    // Right side controls
                    ThemeToggle {
                        toggled => {
                            Theme.is-dark = !Theme.is-dark;
                        }
                    }
                }
                
                // Bottom border
                Divider {
                    y: parent.height - 1px;
                }
            }

            HorizontalLayout {
                // Sidebar
                if sidebar_visible && total_pages > 0: Rectangle {
                    width: 250px;
                    background: Theme.surface;
                    
                    // Right border
                    Rectangle {
                        width: 1px;
                        background: Theme.border;
                        x: parent.width - 1px;
                    }

                    VerticalLayout {
                        padding: 0px;
                        Rectangle {
                            height: 48px;
                            HorizontalLayout {
                                padding-left: Theme.padding-lg;
                                alignment: center;
                                Text {
                                    text: "Pages";
                                    font_size: Theme.font-lg;
                                    font-weight: 700;
                                    color: Theme.text-primary;
                                    vertical-alignment: center;
                                }
                            }
                        }

                        ListView {
                            for page_idx in total_pages: Rectangle {
                                height: 40px;
                                background: touch.has-hover ? Theme.surface-hover : (current_page == page_idx ? Theme.accent.with_alpha(0.2) : Colors.transparent);
                                touch := TouchArea {
                                    clicked => {
                                        current_page = page_idx;
                                    }
                                }

                                HorizontalLayout {
                                    padding-left: Theme.padding-lg;
                                    padding-right: Theme.padding-lg;
                                    spacing: Theme.padding-md;
                                    alignment: start;
                                    Text {
                                        text: "Page " + (page_idx + 1);
                                        color: current_page == page_idx ? Theme.accent : Theme.text-primary;
                                        font_size: Theme.font-md;
                                        vertical-alignment: center;
                                    }
                                }
                            }
                        }
                    }
                }

                // Main Content Area
                VerticalLayout {
                    // Secondary Toolbar (Navigation)
                    if total_pages > 0: Rectangle {
                        height: 52px;
                        background: Theme.surface;
                        
                        // Bottom border
                        Divider {
                            y: parent.height - 1px;
                        }

                        HorizontalLayout {
                            padding-left: Theme.padding-lg;
                            padding-right: Theme.padding-lg;
                            spacing: Theme.padding-lg;
                            alignment: center;

                            prev-btn := ModernButton {
                                text: "Prev";
                                enabled: current_page > 0;
                                clicked => {
                                    if (current_page > 0) {
                                        current_page -= 1;
                                    }
                                }
                                ChevronLeftIcon {
                                    icon-color: prev-btn.enabled ? Theme.text-primary : Theme.text-secondary;
                                }
                            }

                            Rectangle {
                                width: 100px;
                                height: 30px;
                                background: Theme.background;
                                border-radius: Theme.radius-sm;
                                border-width: 1px;
                                border-color: Theme.border;

                                TextInput {
                                    text: (current_page + 1);
                                    color: Theme.text-primary;
                                    font-size: Theme.font-md;
                                    vertical-alignment: center;
                                    horizontal-alignment: center;
                                    width: 100%;
                                    height: 100%;
                                    accepted => {
                                        if (self.text.is-float()) {
                                            jump_to_page(self.text.to-float() - 1);
                                        }
                                    }
                                }
                            }

                            Text {
                                text: " / " + (total_pages > 0 ? total_pages : 1);
                                vertical_alignment: center;
                                color: Theme.text-secondary;
                                font_size: Theme.font-md;
                            }

                            next-btn := ModernButton {
                                text: "Next";
                                enabled: current_page < total_pages - 1;
                                clicked => {
                                    if (current_page < total_pages - 1) {
                                        current_page += 1;
                                    }
                                }
                                ChevronRightIcon {
                                    icon-color: next-btn.enabled ? Theme.text-primary : Theme.text-secondary;
                                }
                            }

                            // Spacer
                            Rectangle {
                                width: 20px;
                            }

                            HorizontalLayout {
                                spacing: Theme.padding-sm;
                                ModernButton {
                                    text: "Fit W";
                                    enabled: total_pages > 0 && !is_loading;
                                    clicked => {
                                        if (pdf-page-width > 0) {
                                            root.zoom = ((scroll-view.width - 60px) / 1px) / pdf-page-width;
                                             // Force re-render of current view
                                             request_render(current_page, root.zoom);
                                        }
                                    }
                                }
                            }
                            
                            // Spacer
                            Rectangle {
                                width: 20px;
                            }

                            HorizontalLayout {
                                spacing: Theme.padding-md;
                                IconButton {
                                    clicked => {
                                        zoom = max(0.25, zoom / 1.25);
                                        request_render(current_page, zoom);
                                    }
                                    MinusIcon { }
                                }

                                Rectangle {
                                    width: 60px;
                                    height: 30px;
                                    background: Theme.background;
                                    border-radius: Theme.radius-sm;
                                    border-width: 1px;
                                    border-color: Theme.border;
                                    TextInput {
                                        text: round(zoom * 100);
                                        color: Theme.text-primary;
                                        font-size: Theme.font-md;
                                        vertical-alignment: center;
                                        horizontal-alignment: center;
                                        width: 100%;
                                        height: 100%;
                                        accepted => {
                                            if (self.text.is-float()) {
                                                zoom = max(0.25, min(5.0, self.text.to-float() / 100.0));
                                                request_render(current_page, zoom);
                                            }
                                        }
                                    }
                                }

                                Text {
                                    text: "%";
                                    vertical-alignment: center;
                                    color: Theme.text-primary;
                                }

                                IconButton {
                                    clicked => {
                                        zoom = min(5.0, zoom * 1.25);
                                        request_render(current_page, zoom);
                                    }
                                    PlusIcon { }
                                }
                            }
                        }
                    }

                    // Continuous PDF View Area
                    scroll-view := ScrollView {
                        viewport-width: max(parent.width, pdf_page_width * 1px * zoom);
                        viewport-height: max(parent.height, total_height * 1px);

                        // Layout for pages
                        VerticalLayout {
                            alignment: start;
                            padding: 20px;
                            spacing: 10px;
                            for page_idx in total_pages: Rectangle {
                                height: (pdf_page_heights[page_idx] * 1px * zoom) + 20px; // Add spacing
                                width: 100%;
                                Rectangle {
                                    width: pdf_page_width * 1px * zoom;
                                    height: pdf_page_heights[page_idx] * 1px * zoom;
                                    
                                    // Shadow
                                    Rectangle {
                                        x: 4px;
                                        y: 4px;
                                        width: 100%;
                                        height: 100%;
                                        background: #000000;
                                        opacity: 0.2;
                                    }

                                    // Page Image
                                    Image {
                                        width: 100%;
                                        height: 100%;
                                        source: pdf_pages[page_idx];
                                    }
                                }
                            }
                        }
                    }
                }
            }

            // Status Bar
            Rectangle {
                height: 32px;
                background: Theme.surface;
                
                // Top border
                Divider {
                    y: 0px;
                }

                HorizontalLayout {
                    padding-left: Theme.padding-md;
                    alignment: start;
                    Text {
                        text: status_text;
                        font_size: Theme.font-sm;
                        color: Theme.text-secondary;
                        vertical-alignment: center;
                    }
                }
            }
        }
        
        // Loading Overlay
        if is_loading: Rectangle {
            width: 100%;
            height: 100%;
            background: Theme.background.with-alpha(0.8);
            TouchArea { } // Block input
             
             VerticalLayout {
                alignment: center;
                spacing: Theme.padding-md;
                Text {
                    text: "Loading...";
                    font-size: Theme.font-xl;
                    color: Theme.text-primary;
                    horizontal-alignment: center;
                }

                ProgressIndicator {
                    indeterminate: true;
                    width: 200px;
                    height: 4px;
                }
            }
        }
    }
}
