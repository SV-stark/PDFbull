}

export component MoonIcon inherits Icon {
    viewbox-width: 24;
    viewbox-height: 24;
    commands: "M 21 12.79 A 9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79 z";
    stroke-width: 1.5px;
