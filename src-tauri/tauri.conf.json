{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "PDFbull",
  "version": "0.1.0",
  "identifier": "com.pdfbull.app",
  "build": {
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "PDFbull - Slint Edition",
        "width": 1024,
        "height": 768,
        "minWidth": 640,
        "minHeight": 480,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "nsis"
    ],
    "resources": [
      "pdfium.dll",
      "onnxruntime.dll",
      "resources/ocr_models/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "fileAssociations": [
      {
        "ext": [
          "pdf"
        ],
        "name": "PDF Document",
        "description": "Adobe PDF document",
        "role": "Viewer"
      }
    ]
  }
}
