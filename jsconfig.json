{
    "compilerOptions": {
        "checkJs": true,
        "strict": false,
        "noEmit": true,
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ]
        }
    },
    "include": [
        "src/**/*.js",
        "src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "src-tauri"
    ]
}